# Server Configuration
NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/lexora
# Or use MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/lexora

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_EXPIRE=7d

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/google/callback

# AWS S3 Configuration (Optional for file uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=lexora-assets
AWS_REGION=us-east-1

# AI Service Configuration
GROQ_API_KEY=your-groq-api-key

# Wav2Lip Service Configuration
WAV2LIP_SERVICE_URL=http://localhost:5001

# Google Cloud TTS (Optional - for better TTS quality)
GOOGLE_CLOUD_TTS_API_KEY=your-google-cloud-tts-api-key

# Frontend URL
CLIENT_URL=http://localhost:5173